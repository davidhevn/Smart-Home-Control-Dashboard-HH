                    <Label Text="ðŸ›¡" TextColor="White"/>
                    <Label Text="{Binding TagLeft, Source={RelativeSource AncestorType={x:Type local:GreetingCard}}}"
                           FontSize="12" TextColor="White"/>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="8">
                    <Label Text="âš¡" TextColor="White"/>
                    <Label Text="{Binding TagRight, Source={RelativeSource AncestorType={x:Type local:GreetingCard}}}"
                           FontSize="12" TextColor="White"/>
                </HorizontalStackLayout>
            </Grid>

        </Grid>
    </Border>
</ContentView>
