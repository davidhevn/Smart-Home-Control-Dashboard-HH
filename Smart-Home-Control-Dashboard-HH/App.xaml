<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Smart_Home_Control_Dashboard_HH"
             x:Class="Smart_Home_Control_Dashboard_HH.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- COLORS -->
            <Color x:Key="AppBg">#F6F7FB</Color>
            <Color x:Key="CardBg">#FFFFFF</Color>

            <Color x:Key="Primary">#2D6CDF</Color>
            <Color x:Key="Secondary">#8E8E93</Color>

            <Color x:Key="TextPrimary">#1C1C1E</Color>
            <Color x:Key="TextSecondary">#6B6B70</Color>

            <!-- FONT SIZES -->
            <x:Double x:Key="H1">22</x:Double>
            <x:Double x:Key="H2">18</x:Double>
            <x:Double x:Key="Body">14</x:Double>
            <x:Double x:Key="Caption">12</x:Double>

        </ResourceDictionary>
    </Application.Resources>

</Application>
