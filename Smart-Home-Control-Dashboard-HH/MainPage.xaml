<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Smart_Home_Control_Dashboard_HH.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource AppBg}"
    Padding="20">

    <!-- MAIN GRID -->
    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
          RowSpacing="20">

        <!-- 1️⃣ HEADER -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,Auto">

            <VerticalStackLayout Spacing="4">
                <Label Text="Smart Home Dashboard"
                       FontSize="{StaticResource H1}"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}" />

                <Label Text="Living Room Overview"
                       FontSize="{StaticResource Body}"
                       TextColor="{StaticResource TextSecondary}" />
            </VerticalStackLayout>

            <!-- placeholder icon -->
            <BoxView Grid.Column="1"
                     WidthRequest="28"
                     HeightRequest="28"
                     BackgroundColor="{StaticResource Primary}"
                     CornerRadius="14"
                     VerticalOptions="Center"/>
        </Grid>

        <!-- 2️⃣ WEATHER CARD -->
        <Frame Grid.Row="1"
               BackgroundColor="{StaticResource CardBg}"
               CornerRadius="16"
               Padding="16"
               HasShadow="False">

            <Label Text="Weather Card"
                   FontSize="{StaticResource Body}"
                   TextColor="{StaticResource TextSecondary}" />
        </Frame>

        <!-- 3️⃣ DEVICE GRID (2x2) -->
        <Grid Grid.Row="2"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="*,*"
              RowSpacing="12"
              ColumnSpacing="12">

            <Frame Grid.Row="0" Grid.Column="0"
                   BackgroundColor="{StaticResource CardBg}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <Label Text="Device 1"
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>

            <Frame Grid.Row="0" Grid.Column="1"
                   BackgroundColor="{StaticResource CardBg}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <Label Text="Device 2"
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>

            <Frame Grid.Row="1" Grid.Column="0"
                   BackgroundColor="{StaticResource CardBg}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <Label Text="Device 3"
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>

            <Frame Grid.Row="1" Grid.Column="1"
                   BackgroundColor="{StaticResource CardBg}"
                   CornerRadius="16"
                   Padding="16"
                   HasShadow="False">
                <Label Text="Device 4"
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>
        </Grid>

        <!-- 4️⃣ ENERGY USAGE -->
        <Frame Grid.Row="3"
               BackgroundColor="{StaticResource CardBg}"
               CornerRadius="16"
               Padding="16"
               HasShadow="False">

            <Label Text="Energy Usage"
                   FontSize="{StaticResource Body}"
                   TextColor="{StaticResource TextSecondary}" />
        </Frame>

    </Grid>
</ContentPage>
